<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2EA">

    <RelativeLayout
        android:id="@+id/lila1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nomor"
            android:textSize="20sp"
            android:textStyle="bold"
           android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt1"
            android:src="@drawable/ic_create_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
           android:layout_toRightOf="@+id/iv1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila1"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt2"
            android:src="@drawable/ic_group_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila2"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Tanggal Lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt3"
            android:src="@drawable/ic_date_range_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila3"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Jenis Kelamin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt4"
            android:src="@drawable/ic_person_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila4"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Alamat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt5"
            android:src="@drawable/ic_place_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv5"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/lila5"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_save_black_24dp"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/iv6"
            android:background="#FFF2EA"
            android:text="SIMPAN"
            android:textColor="#FF0000"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>