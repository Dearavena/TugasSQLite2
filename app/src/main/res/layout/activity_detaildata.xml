<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2EA">

    <RelativeLayout
        android:id="@+id/lila"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/student1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/lila"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Nomor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt1"
            android:src="@drawable/ic_create_black_24dp"/>
        <EditText
            android:id="@+id/Edit1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila1"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Nama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt2"
            android:src="@drawable/ic_group_black_24dp"/>
        <EditText
            android:id="@+id/Edit2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila2"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Tanggal Lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt3"
            android:src="@drawable/ic_date_range_black_24dp"/>
        <EditText
            android:id="@+id/Edit3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila3"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Jenis Kelamin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt4"
            android:src="@drawable/ic_person_black_24dp"/>
        <EditText
            android:id="@+id/Edit4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lila5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lila4"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Alamat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txt5"
            android:src="@drawable/ic_place_black_24dp"/>
        <EditText
            android:id="@+id/Edit5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv5"/>
    </RelativeLayout>

</RelativeLayout>